@{
    ViewData["Title"] = "Payment Failed";
    Layout = "~/Views/Shared/_PharmacyLayout.cshtml";
}

<div class="container text-center mt-5">
    <h2 class="text-danger">Payment Failed</h2>
    <p class="text-muted">Unfortunately, your payment could not be processed. Please try again.</p>

    <div class="alert alert-warning">
        @if (TempData["Error"] != null)
        {
            <p>@TempData["Error"]</p>
        }
    </div>

    <a asp-action="Index" asp-controller="PharmacyCart" class="btn btn-secondary">Back to Cart</a>
    <a asp-action="Pay" asp-controller="PharmacyCart" asp-route-orderId="@ViewBag.OrderId" class="btn btn-primary">Retry Payment</a>
</div>
