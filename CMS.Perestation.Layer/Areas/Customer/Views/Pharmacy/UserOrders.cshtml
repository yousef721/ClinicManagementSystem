@using CMS.Models.CuraHub.PharmacySection
@model List<PharmacyCustomer>

@{
    ViewData["Title"] = "Customer List";
    Layout = "~/Views/Shared/_PharmacyLayout.cshtml";
    
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Customer List</h2>

    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>State</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Id</td>
                    <td>@customer.FirstName</td>
                    <td>@customer.LastName</td>
                    <td>@customer.Email</td>
                    <td>@customer.Phone</td>
                    <td>@customer.State</td>
                    <td>
                        <a href="/Customer/CuraHub/Pharmacy/OrderDetails?customerId=@customer.Id" class="btn btn-primary btn-sm">
                            View Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
