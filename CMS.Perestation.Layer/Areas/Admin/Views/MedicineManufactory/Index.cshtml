@model List<CMS.Models.CuraHub.PharmacySection.PharmacySectionVM.MedicineManufactoryVM>

@{
    ViewData["Title"] = "Medicine Manufactory";
}

<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary mb-3">Create New Manufactory</a>
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var item in Model)

                {
                    <tr>
                        <td>@item.Name</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center">No Medicine Manufactory available</td>
                </tr>
            }
        </tbody>
    </table>
</div>


