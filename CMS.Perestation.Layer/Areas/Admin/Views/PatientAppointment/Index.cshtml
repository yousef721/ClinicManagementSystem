@using CMS.Models.CuraHub.ClinicSection

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CuraHubLayout.cshtml";
}

<h1>
    <img src="~/Files/Images/فلسطين.svg" class="rounded-circle " style="width: 50px;" />
</h1>


@model List<PatientAppointment>

<br />
<form>
    <div class="row">
        <div class="col-4">
            <div class="mb-3">
                <input type="text" class="form-control" name="query" id="SearchInput" placeholder="Search for Clinic Patient Appointment">
            </div>
        </div>

        <div class="col-2">
            <button type="submit" class="btn btn-primary">Search</button>

        </div>
    </div>
</form>

<div class="row">
    <div class="col-10">
        <h1>All Clinic Patient Appointment</h1>
    </div>
    <div class="col-2">
        <a href="/Admin/CuraHub/Clinic/PatientAppointment/Create" class="btn btn-secondary"><i class="bi bi-plus-circle"></i> Add New Clinic Patient Appointment</a>
    </div>
</div>
<br />


<table class="table" style="border:solid">
    <thead class="table-dark">
        <tr>
            <th scope="col" style="text-align:center">Patient Name</th>
            <th scope="col" style="text-align:center">Date</th>
            <th scope="col" style="text-align:center">Day</th>
            <th scope="col" style="text-align:center">Appointment</th>
            <th scope="col" style="text-align:center">Doctor Name</th>
            <th scope="col" style="text-align:center">Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="border:solid">
                <th scope="row" style="border:solid">@item.Patient.FirstName @item.Patient.LastName</th>
                <th scope="row" style="border:solid">@item.Schedule.Day</th>
                <th scope="row" style="border:solid">@item.Schedule.Appointment</th>
                <th scope="row" style="border:solid">@item.Schedule.Doctor.FirstName @item.Schedule.Doctor.LastName</th>

                <td>
                    <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                        <button type="button" class="btn btn-primary">Action</button>
                        <div class="btn-group" role="group">
                            <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                            <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                @* <a class="dropdown-item" href="/Admin/Actor/Edit?ActorId=@item.Id">Edit</a> *@
                                @* <a class="dropdown-item" href="/Admin/Actor/Delete?ActorId=@item.Id" onclick="return confirm('are you sure?')">Delete</a> *@
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex flex-row-reverse">

    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
            @for (int i = 1; i <= (Model.Count() + 4) / 5; i++)
            {

                <li class="page-item"><a class="page-link " href="/Admin/Actor/Index?PageNumber=@i">@i</a></li>

            }
            <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
    </nav>


</div>

