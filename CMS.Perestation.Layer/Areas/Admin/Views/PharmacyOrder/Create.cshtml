@using CMS.Models.CuraHub.PharmacySection
@using CMS.Models.Enums
@model CMS.Models.CuraHub.PharmacySection.PharmacySectionVM.DeliveryAndCustomerVM

@{
    ViewData["Title"] = "Create Pharmacy Order";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>
    <div class="card shadow p-4 rounded">
        <form asp-action="Create" method="post" class="needs-validation" novalidate>
            <div class="d-flex gap-3">
                <div class="form-group w-50">
                    <label asp-for="PharmacyOrderVM.Quentity" class="control-label">Quantity</label>
                    <input asp-for="PharmacyOrderVM.Quentity" class="form-control" type="number"/>
                    <span asp-validation-for="PharmacyOrderVM.Quentity" class="text-danger"></span>
                </div>

                <div class="form-group w-50">
                    <label asp-for="PharmacyOrderVM.Discount" class="control-label">Discount</label>
                    <input asp-for="PharmacyOrderVM.Discount" class="form-control" type="number"/>
                    <span asp-validation-for="PharmacyOrderVM.Discount" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex gap-3">
                <div class="form-group w-50">
                    <label asp-for="PharmacyOrderVM.ShipmentStatus" class="control-label">Shipment Status</label>
                    <select asp-for="PharmacyOrderVM.ShipmentStatus" class="form-control">
                        <option value="">Select Status</option>
                        @foreach (var status in Enum.GetValues(typeof(ShipmentStatus)))
                        {
                            <option value="@status">@status</option>
                        }
                    </select>
                    <span asp-validation-for="PharmacyOrderVM.ShipmentStatus" class="text-danger"></span>
                </div>

                <div class="form-group w-50">
                    <label asp-for="PharmacyOrderVM.TotalPrice" class="control-label">Total Price</label>
                    <input asp-for="PharmacyOrderVM.TotalPrice" class="form-control" />
                    <span asp-validation-for="PharmacyOrderVM.TotalPrice" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex gap-3">
                <div class="form-group w-50">
                    <label asp-for="PharmacyOrderVM.PharmacyCustomerId" class="control-label">Pharmacy Customer</label>
                    <select asp-for="PharmacyOrderVM.PharmacyCustomerId" class="form-control">
                        <option value="">Select Customer</option>
                        @foreach (var customer in Model.PharmacyCustomer)
                        {
                            <option value="@customer.Id">@customer.FirstName @customer.LastName</option>
                        }
                    </select>
                    <span asp-validation-for="PharmacyOrderVM.PharmacyCustomerId" class="text-danger"></span>
                </div>

                <div class="form-group w-50">
                    <label asp-for="PharmacyOrderVM.PharmacyDeliveryRepresentativeId" class="control-label">Delivery Representative</label>
                    <select asp-for="PharmacyOrderVM.PharmacyDeliveryRepresentativeId" class="form-control">
                        <option value="">Select Representative</option>
                        @foreach (var delivery in Model.PharmacyDeliveryRepresentative)
                        {
                            <option value="@delivery.Id">@delivery.FirstName @delivery.LastName</option>
                        }
                    </select>
                    <span asp-validation-for="PharmacyOrderVM.PharmacyDeliveryRepresentativeId" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Submit</button>
            <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
