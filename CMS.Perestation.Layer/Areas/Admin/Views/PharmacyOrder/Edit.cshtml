@using CMS.Models.CuraHub.PharmacySection
@using CMS.Models.Enums
@model CMS.Models.CuraHub.PharmacySection.PharmacySectionVM.PharmacyOrderVM

@{
    ViewData["Title"] = "Edit Pharmacy Order";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>
    <div class="card shadow p-4 rounded">
        <form asp-action="Edit" method="post" class="needs-validation" novalidate>
            <input type="hidden" asp-for="Id" />
            <div class="d-flex gap-3">
                <div class="form-group w-50">
                    <label asp-for="Quentity" class="control-label">Quantity</label>
                    <input asp-for="Quentity" class="form-control" type="number"/>
                    <span asp-validation-for="Quentity" class="text-danger"></span>
                </div>

                <div class="form-group w-50">
                    <label asp-for="Discount" class="control-label">Discount</label>
                    <input asp-for="Discount" class="form-control" type="number"/>
                    <span asp-validation-for="Discount" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex gap-3">
                <div class="form-group w-50">
                    <label asp-for="ShipmentStatus" class="control-label">Shipment Status</label>
                    <select asp-for="ShipmentStatus" class="form-control">
                        <option value="">Select Status</option>
                        @foreach (var status in Enum.GetValues(typeof(ShipmentStatus)))
                        {
                            <option value="@status">@status</option>
                        }
                    </select>
                    <span asp-validation-for="ShipmentStatus" class="text-danger"></span>
                    
                </div>
                <div class="form-group w-50">
                    <label asp-for="TotalPrice" class="control-label">Total Price</label>
                    <input asp-for="TotalPrice" class="form-control" />
                    <span asp-validation-for="TotalPrice" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex gap-3">
                <div class="form-group w-50">
                    <label asp-for="PharmacyCustomerId" class="control-label">Pharmacy Customer</label>
                    <select asp-for="PharmacyCustomerId" class="form-control">
                        <option value="">Select Customer</option>
                        @foreach (var customer in (List<PharmacyCustomer>)ViewData["PharmacyCustomer"])
                        {
                            <option value="@customer.Id">@customer.FirstName @customer.LastName</option>
                        }
                    </select>
                    @* <input asp-for="PharmacyCustomerId" class="form-control" type="number"/> *@
                    <span asp-validation-for="PharmacyCustomerId" class="text-danger"></span>
                </div>

                <div class="form-group w-50">
                    <label asp-for="PharmacyDeliveryRepresentativeId" class="control-label">Delivery Representative</label>
                    <select asp-for="PharmacyDeliveryRepresentativeId" class="form-control">
                        <option value="">Select Customer</option>
                        @foreach (var delivery in (List<PharmacyDeliveryRepresentative>)ViewData["PharmacyDelivery"])
                        {
                            <option value="@delivery.Id">@delivery.FirstName @delivery.LastName</option>
                        }
                    </select>
                    @* <input asp-for="PharmacyDeliveryRepresentativeId" class="form-control" /> *@
                    <span asp-validation-for="PharmacyDeliveryRepresentativeId" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Submit</button>
            <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
