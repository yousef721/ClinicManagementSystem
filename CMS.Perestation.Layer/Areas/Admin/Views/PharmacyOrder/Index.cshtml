@model IEnumerable<CMS.Models.CuraHub.PharmacySection.PharmacySectionVM.PharmacyOrderVM>

@{
    ViewData["Title"] = "Pharmacy Orders";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">Add New Order</a>

    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Quantity</th>
                <th>Discount</th>
                <th>Total Price</th>
                <th>Shipment Status</th>
                <th>Customer</th>
                <th>Delivery Representative</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.Quentity</td>
                        <td>@order.Discount</td>
                        <td>@order.TotalPrice</td>
                        <td>@order.ShipmentStatus</td>
                        <td>@order.PharmacyCustomer?.FirstName @order.PharmacyCustomer?.LastName</td>
                        <td>@order.PharmacyDeliveryRepresentative?.FirstName @order.PharmacyDeliveryRepresentative?.LastName</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-warning btn-sm">Edit</a>
                            <form asp-action="Delete" asp-route-id="@order.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center">No orders available</td>
                </tr>
            }
        </tbody>
    </table>
</div>

