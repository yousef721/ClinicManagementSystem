@using CMS.Utitlities.StaticData
@model CMS.Models.CuraHub.PharmacySection.PharmacySectionVM.PharmacyDeliveryRepresentativeVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1>Edit Delivery</h1>
    <div class="card shadow p-4 rounded">
        <form asp-action="Edit" method="post" class="needs-validation" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" name="pageNumber" value="@ViewBag.currentPage"/>
            <div class="d-flex flex-row mb-3">
                <div class="form-group d-flex flex-column align-items-start w-50 me-3">
                    <label asp-for="FirstName" class="control-label">First Name:</label>
                    <input asp-for="FirstName" class="form-control" type="text" placeholder="First Name"/>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group d-flex flex-column align-items-start w-50 me-3">
                    <label asp-for="LastName" class="control-label">Last Name:</label>
                    <input asp-for="LastName" class="form-control" type="text" placeholder="Last Name"/>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group d-flex flex-column align-items-start w-50">
                    <label asp-for="Phone" class="control-label">Phone Number:</label>
                    <input asp-for="Phone" class="form-control" type="tel" placeholder="Phone Number"/>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex flex-row mb-3">
                <div class="form-group d-flex flex-column align-items-start w-50 me-4">
                    <label asp-for="State" class="control-label">Select State:</label>
                    <select class="form-control" asp-for="State">
                        <option selected>Select State</option>
                        @foreach (var item in State.States)
                        {
                            <option value="@item">@item</option>
                        };
                    </select>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
                <div class="form-group d-flex flex-column align-items-start w-50">
                    <label asp-for="City" class="control-label">Select City:</label>
                    <select class="form-control" asp-for="City">
                        <option selected>Select City</option>
                        @foreach (var item in City.cities)
                        {
                            <option value="@item">@item</option>
                        }
                    </select>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex flex-row mb-3">
                <div class="form-group d-flex flex-column align-items-start w-50 me-4">
                    <label asp-for="Region" class="control-label">Region:</label>
                    <input asp-for="Region" class="form-control me-4" type="text" placeholder="Region"/>
                    <span asp-validation-for="Region" class="text-danger"></span>
                </div>
                <div class="form-group d-flex flex-column align-items-start w-50">
                    <label asp-for="Street" class="control-label">Street:</label>
                    <input asp-for="Street" class="form-control" type="text" placeholder="Street"/>
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex flex-row mb-3">
                <div class="form-group d-flex w-50">
                    <label asp-for="Gender" class="control-label me-5">Gender:</label>
                    <input asp-for="Gender" class="form-control form-check-input me-1" type="radio" value="@Gender.Male" checked/>
                    <label class="form-check-label me-2" asp-for="Gender">
                        Male
                    </label>
                    <input asp-for="Gender" class="form-control form-check-input me-1" type="radio" value="@Gender.Female"/>
                    <label class="form-check-label me-2" asp-for="Gender">
                        Female
                    </label>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group d-flex w-50">
                    <label asp-for="MaritalStatus" class="control-label me-5">Marital Status:</label>
                    <input asp-for="MaritalStatus" class="form-control form-check-input me-1" type="radio" value="@MaritalStatus.Single" checked/>
                    <label class="form-check-label me-2" asp-for="MaritalStatus">
                        Single
                    </label>
                    <input asp-for="MaritalStatus" class="form-control form-check-input me-1" type="radio" value="@MaritalStatus.Married"/>
                    <label class="form-check-label me-2" asp-for="MaritalStatus">
                        Married
                    </label>
                    <span asp-validation-for="MaritalStatus" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex flex-row mb-3">
                <div class="form-group d-flex flex-column align-items-start w-50 me-3">
                    <label asp-for="DateOfBirth" class="control-label">Birth Day:</label>
                    <input asp-for="DateOfBirth" class="form-control" type="date"/>
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
                <div class="form-group d-flex flex-column align-items-start w-50 me-3">
                    <label asp-for="StartWork" class="control-label">Start Work:</label>
                    <input asp-for="StartWork" class="form-control" type="time"/>
                    <span asp-validation-for="StartWork" class="text-danger"></span>
                </div>
                <div class="form-group d-flex flex-column align-items-start w-50">
                    <label asp-for="EndWork" class="control-label">End Work:</label>
                    <input asp-for="EndWork" class="form-control" type="time"/>
                    <span asp-validation-for="EndWork" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex flex-row mb-3">
                <div class="form-group d-flex flex-column align-items-start w-50 me-4">
                    <label asp-for="FileProfile" class="control-label me-1">Photo:</label>
                    <input asp-for="FileProfile" class="form-control" type="file"/>
                    @if (Model.ProfilePicture != null)
                    {
                        <div class="ms-1">
                            <img src="~/Files/Images/PharmacyDelivery/@Model.ProfilePicture" alt="Profile Photo" class="img-thumbnail" style="width: 50px; height: 50px;" />
                        </div>
                    }
                    <span asp-validation-for="FileProfile" class="text-danger"></span>
                </div>
                <div class="form-group d-flex flex-column align-items-start w-50">
                    <label asp-for="Salary" class="control-label">Salary:</label>
                    <input asp-for="Salary" class="form-control" type="number" placeholder="Salary"/>
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mt-4">Save</button>
            <a asp-action="Index" asp-route-pageNumber="@ViewBag.currentPage" class="btn btn-secondary mt-4">Cancel</a>
        </form>
    </div>
</div>

