@model CMS.Models.CuraHub.PharmacySection.PharmacySectionVM.PharmacyDeliveryRepresentativeVM

@{
    Layout = "~/Views/Shared/_CuraHubLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow p-4 rounded">
        <div class="card">
            <div class="card-header">
                <h2>Delivery Representative: @Model.FirstName @Model.LastName</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 text-center">
                        <img src="~/Files/Images/PharmacyDelivery/@Model.ProfilePicture" alt="Profile Picture" class="img-fluid rounded" style="max-width:200px; max-height:200px;" />
                    </div>
                    <div class="col-md-8">
                        <p><strong>Email:</strong> @Model.Email</p>
                        <p><strong>Phone:</strong> @Model.Phone</p>
                        <p><strong>Address:</strong> @Model.Street, @Model.Region, @Model.City, @Model.State</p>
                        <p><strong>Gender:</strong> @Model.Gender</p>
                        <p><strong>Date of Birth:</strong> @Model.DateOfBirth</p>
                        <p><strong>National ID Number:</strong> @Model.PersonalNationalIDNumber</p>
                        <p><strong>Marital Status:</strong> @Model.MaritalStatus</p>
                        <p><strong>Salary:</strong> @Model.Salary</p>
                        <p><strong>Work Duration:</strong> @Model.StartWork - @Model.EndWork</p>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-md-4 text-center">
                        <h5>National ID Card</h5>
                        <img src="~/Files/Images/PharmacyDelivery/@Model.PersonalNationalIDCard" alt="National ID Card" class="img-fluid rounded" style="max-width:200px; max-height:200px;" />
                    </div>
                </div>
                <div class="mt-4 text-center">
                    <a asp-action="Edit" asp-route-id="@Model.Id" asp-route-pageNumber="@ViewBag.currentPage"  class="btn btn-primary">Edit</a>
                    <a asp-action="Index" asp-route-pageNumber="@ViewBag.currentPage" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>
