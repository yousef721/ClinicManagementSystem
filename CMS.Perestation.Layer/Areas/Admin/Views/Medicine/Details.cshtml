@model CMS.Models.CuraHub.PharmacySection.PharmacySectionVM.MedicineVM

@{
    ViewData["Title"] = "Medicine Details";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>
    <div class="card shadow p-4 rounded">
        <div class="row">
            <div class="col-md-4">
                <img src="~/Files/Images/@Model.Img" alt="Medicine Image" class="img-fluid rounded" />
            </div>
            <div class="col-md-8">
                <h3>@Model.Name</h3>
                <p><strong>Description:</strong> @Model.Description</p>
                <p><strong>Price:</strong> $@Model.Price</p>
                <p><strong>Quantity:</strong> @Model.Quantity</p>
                <p><strong>Pharmacy Category:</strong> @Model.PharmacyCategory?.Name</p>
                <p><strong>Manufacturer:</strong> @Model.MedicineManufactory?.Name</p>
            </div>
        </div>
        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
