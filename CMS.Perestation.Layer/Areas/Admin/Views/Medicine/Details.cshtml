@model CMS.Models.CuraHub.PharmacySection.PharmacySectionVM.MedicineVM

@{
    Layout = "~/Views/Shared/_CuraHubLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow p-4 rounded">
        <div class="card">
            <div class="card-header">
                <h2>@Model.Name</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <img src="~/Files/Images/Medicines/@Model.Img" alt="Medicine Image" class="img-fluid rounded" />
                    </div>
                    <div class="col-md-8">
                        <p><strong>Description:</strong> @Model.Description</p>
                        <p><strong>Price:</strong> $@Model.Price</p>
                        <p><strong>Quantity:</strong> @Model.Quantity</p>
                        <p><strong>Pharmacy Category:</strong> @Model.PharmacyCategory?.Name</p>
                        <p><strong>Manufacturer:</strong> @Model.MedicineManufactory?.Name</p>
                    </div>
                </div>
                <div class="mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" asp-route-pageNumber="@ViewBag.currentPage" class="btn btn-primary">Edit</a>
                    <a asp-action="Index" asp-route-pageNumber="@ViewBag.currentPage" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>
