@model CMS.Models.CuraHub.PharmacySection.PharmacySectionVM.PharmacyCategoryVM

@{
    Layout = "~/Views/Shared/_CuraHubLayout.cshtml";
}

<div class="container mt-5">
    <h1>Edit Category</h1>
    <div class="card shadow p-4 rounded">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" name="pageNumber" value="@ViewBag.currentPage"/>
            <div class="form-group">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File" class="control-label">Upload Image</label>
                <input type="file" accept="image/*" class="form-control" name="File" id="File" placeholder="File" onchange="previewImage(event)">
                @* <input asp-for="File" class="form-control w-75" type="file" /> *@
                @if (Model.Img != null)
                {
                    <div class="mt-3 w-25">
                        <img src="~/Files/Images/PharmacyCategories/@Model.Img" alt="Profile Photo" class="img-thumbnail" style="width: 100px; height: 100px;" />
                    </div>
                }
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" asp-route-pageNumber="@ViewBag.currentPage"  class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

