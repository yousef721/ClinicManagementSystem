@model CMS.Models.CuraHub.PharmacySection.PharmacySectionVM.PharmacyCategoryVM

@{
    Layout = "~/Views/Shared/_CuraHubLayout.cshtml";
}

<div class="container mt-5">
    <h1>Create Pharmacy Category</h1>
    <div class="card shadow p-4 rounded">
        <form asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File" class="form-label"></label>
                <input asp-for="File" type="file"  name="File" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-4">Create</button>
            <a asp-action="Index" asp-route-pageNumber="@ViewBag.currentPage" class="btn btn-secondary mt-4">Cancel</a>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

