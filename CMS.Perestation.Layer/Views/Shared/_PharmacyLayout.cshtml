<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CuraHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    @* <link rel="stylesheet" href="~/CMS.Presentation.layer.styles.css" asp-append-version="true" /> *@
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            background-image: url('/Files/Images/Pharmacy.webp');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center center;
            background-attachment: fixed;
        }

        .hero-section {
            /* height: 70vh; */
            /* display: flex; */
            align-items: center;
            justify-content: center;
            color: white;
            text-align: center;
            margin: auto;
        }

            .hero-section h1 {
                font-size: 3rem;
                font-weight: bold;
            }

        .features-section {
            padding: 3rem 1rem;
        }

        .feature-card {
            border: none;
            transition: transform 0.3s ease;
        }

            .feature-card:hover {
                transform: translateY(-10px);
            }

        .footer {
            background-color: #006d77;
            color: white;
            padding: 2rem 1rem;
            text-align: center;
        }

    </style>

</head>
<body>
    <header>
        @using CMS.Models.CuraHub.IdentitySection
        @using Microsoft.AspNetCore.Identity
        @inject UserManager<ApplicationUser> _userManager
        @{
            var user = await _userManager.GetUserAsync(User);
        }
        <nav class="navbar navbar-expand-lg " style="background-color:#006d77" data-bs-theme="dark">
            <div class="container-fluid">
                <!-- Logo -->
                <a class="navbar-brand" href="#">
                    <img src="~/Files/Images/Logo.webp" alt="Logo" width="50px" style="margin-left: 70px" class="d-inline-block align-text-top rounded-circle">
                </a>
                <!-- Navbar Brand -->
                <a class="navbar-brand" href="/Customer/Home/Index">CuraHub</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor02">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link " href="/Customer/Home/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Customer/Home/Service">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Contact</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">management System</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/Admin/Actor/Index">Actors</a>
                                    <a class="dropdown-item" href="/Admin/category/Index">Categories</a>
                                    <a class="dropdown-item" href="/Admin/Cinema/Index">Cinemas</a>
                                    <a class="dropdown-item" href="/Admin/Movie/Index">Movies</a>
                                    <a class="dropdown-item" href="/Admin/RequestCinema/Index">Request Cinema</a>
                                    <a class="dropdown-item" href="/Identity/User/Index">Users</a>
                                    <a class="dropdown-item" href="/Identity/Role/Index">Roles</a>

                                </div>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/Cart/Index"><i class="bi bi-cart3" style="color: white;"></i></a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">

                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">

                                <img src="~/Files/Images/profiles/@user.ProfilePicture" style="width:40px;height40px;border-radius:50%" alt="Alternate Text" />
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Identity" asp-controller="Account" asp-action="Profile">Welcome @user.FirstName @user.LastName</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link " asp-area="Identity" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link " asp-area="Identity" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link " asp-area="Identity" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>



    </header>
    <div class="hero-section">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <!-- Features Section -->
    <section class="features-section">
        <div class="container">
            <div class="text-center mb-5">
                <h2>Why Choose CuraHub?</h2>
                <p class="text-muted">Simplifying healthcare for everyone.</p>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="card feature-card">
                        <div class="card-body text-center">
                            <h5 class="card-title">Easy Booking</h5>
                            <p class="card-text">Book appointments with just a few clicks.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card feature-card">
                        <div class="card-body text-center">
                            <h5 class="card-title">Expert Doctors</h5>
                            <p class="card-text">Access a network of top-rated specialists.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card feature-card">
                        <div class="card-body text-center">
                            <h5 class="card-title">Secure Platform</h5>
                            <p class="card-text">Your data is safe with us.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="">
        <!-- Footer -->
        <footer class="text-center text-white footer" style="background-color: #006d77;">
            <!-- Grid container -->
            <div class="container p-4 pb-0">
                <!-- Section: CTA -->
                <section class="">
                    <p class="d-flex justify-content-center align-items-center">
                        <span class="me-3">Register for free</span>
                        <a href="/Admin/RequestCinema/CreateNewRequest" data-mdb-ripple-init class="btn btn-outline-light btn-rounded">
                            Sign up!
                        </a>
                    </p>
                </section>
                <!-- Section: CTA -->
            </div>
            <!-- Grid container -->
            <!-- Copyright -->
            <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
                © 2024 Copyright:
                <a class="text-white" href="https://mdbootstrap.com/">MDBootstrap.com</a>
            </div>
            <!-- Copyright -->
        </footer>
        <!-- Footer -->
    </section>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
